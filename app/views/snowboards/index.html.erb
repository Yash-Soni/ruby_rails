<p id="notice"><%= notice %></p>

<h1>Snowboards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snowboards.each do |snowboard| %>
      <tr>
        <td><%= snowboard.name %></td>
        <td><%= snowboard.color %></td>
        <td><%= snowboard.description %></td>
        <td><%= snowboard.price %></td>
        <td><%= link_to 'Show', snowboard %></td>
        <td><%= link_to 'Edit', edit_snowboard_path(snowboard) %></td>
        <td><%= link_to 'Destroy', snowboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Snowboard', new_snowboard_path %>
